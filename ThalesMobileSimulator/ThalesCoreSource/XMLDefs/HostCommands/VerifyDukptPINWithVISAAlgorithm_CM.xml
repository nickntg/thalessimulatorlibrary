<?xml version="1.0" encoding="utf-8" ?>
<CommandConfiguration xmlns="http://tempuri.org/HostCommandDefinitions.xsd">
  <CommandName>Verifies a DUKPT PIN using the VISA algorithm.</CommandName>
  <Request>CM</Request>
  <Response>CN</Response>

  <Field>
    <Name>BDK</Name>
    <IncludeFile>MultiFormatCVK.xml</IncludeFile>
  </Field>

  <Field>
    <Name>PVK</Name>
    <IncludeFile>MultiFormatKey.xml</IncludeFile>
  </Field>

  <Field>
    <Name>KSN Descriptor</Name>
    <Length>3</Length>
    <Type>Hexadecimal</Type>
  </Field>

  <Field>
    <Name>Key Serial Number</Name>
    <Length>20</Length>
    <Type>Hexadecimal</Type>
  </Field>

  <Field>
    <Name>Encrypted Block</Name>
    <Length>16</Length>
    <Type>Hexadecimal</Type>
  </Field>

  <Field>
    <Name>Account Number</Name>
    <Length>12</Length>
    <Type>Numeric</Type>
  </Field>

  <Field>
    <Name>PVKI</Name>
    <Length>1</Length>
    <Type>Numeric</Type>
  </Field>

  <Field>
    <Name>PVV</Name>
    <Length>4</Length>
    <Type>Numeric</Type>
  </Field>
  
</CommandConfiguration>
