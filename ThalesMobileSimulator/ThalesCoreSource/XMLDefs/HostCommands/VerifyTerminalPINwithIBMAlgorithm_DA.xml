<?xml version="1.0" encoding="utf-8" ?>
<CommandConfiguration xmlns="http://tempuri.org/HostCommandDefinitions.xsd">
  <CommandName>Verifies a terminal PIN using the IBM algorithm.</CommandName>
  <Request>DA</Request>
  <Response>DB</Response>

  <Field>
    <Name>TPK</Name>
    <IncludeFile>MultiFormatKey.xml</IncludeFile>
  </Field>

  <Field>
    <Name>PVK</Name>
    <IncludeFile>MultiFormatKey.xml</IncludeFile>
  </Field>

  <Field>
    <Name>Maximum PIN Length</Name>
    <Length>2</Length>
    <Type>Numeric</Type>
    <ValidValue>12</ValidValue>
    <RejectionCodeIfInvalid>15</RejectionCodeIfInvalid>
  </Field>

  <Field>
    <Name>PIN Block</Name>
    <Length>16</Length>
    <Type>Hexadecimal</Type>
  </Field>

  <Field>
    <Name>PIN Block Format Code</Name>
    <Length>2</Length>
    <Type>Numeric</Type>
  </Field>

  <Field>
    <Name>Check Length</Name>
    <Length>2</Length>
    <Type>Numeric</Type>
  </Field>

  <Field>
    <Name>Account Number</Name>
    <Length>12</Length>
    <Type>Numeric</Type>
  </Field>

  <Field>
    <Name>Decimalisation Table</Name>
    <Length>16</Length>
    <Type>Hexadecimal</Type>
  </Field>
  
  <Field>
    <Name>PIN Validation Data</Name>
    <Length>12</Length>
    <Type>Character</Type>
  </Field>

  <Field>
    <Name>Offset</Name>
    <Length>12</Length>
    <Type>Hexadecimal</Type>
  </Field>

</CommandConfiguration>
